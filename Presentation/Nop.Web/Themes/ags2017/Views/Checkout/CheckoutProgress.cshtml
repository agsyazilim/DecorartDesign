<div class="container cart-phase-container">
    <div class="col-lg-12 col-xs-12 cart-phase-area">
        <div class="col-lg-3 col-xs-3 cart-phase @(Model.CheckoutProgressStep == CheckoutProgressStep.Cart ? "phase-active" : "") text-center">
            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
        </div>
        <div class="col-lg-3 col-xs-3 cart-phase @(Model.CheckoutProgressStep == CheckoutProgressStep.Address ? "phase-active" : "") text-center">
            <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
        </div>
        <div class="col-lg-3 col-xs-3 cart-phase @(Model.CheckoutProgressStep == CheckoutProgressStep.Payment ? "phase-active" : "") text-center">
            <span class="glyphicon glyphicon-credit-card" aria-hidden="true"></span>
        </div>
        <div class="col-lg-3 col-xs-3 cart-phase @(Model.CheckoutProgressStep == CheckoutProgressStep.Confirm ? "phase-active" : "") text-center">
            <span class="glyphicon glyphicon-duplicate" aria-hidden="true"></span>
        </div>
    </div>
    <div class="col-lg-12 cart-phase-area-text">
        <div class="col-lg-3 col-xs-3 cart-phase-header  @(Model.CheckoutProgressStep == CheckoutProgressStep.Cart ? "header-active" : "") text-center">
            @T("Checkout.Progress.Cart")
        </div>
        <div class="col-lg-3 col-xs-3 cart-phase-header @(Model.CheckoutProgressStep == CheckoutProgressStep.Address ? "header-active" : "") text-center">
            @T("Checkout.Progress.Address")
        </div>
        <div class="col-lg-3 col-xs-3 cart-phase-header @(Model.CheckoutProgressStep == CheckoutProgressStep.Payment ? "header-active" : "") text-center">
            @T("Checkout.Progress.Payment")
        </div>
        <div class="col-lg-3 col-xs-3 cart-phase-header @(Model.CheckoutProgressStep == CheckoutProgressStep.Confirm ? "header-active" : "") text-center">
            @T("Checkout.Progress.Confirm")
        </div>
    </div>
</div>