@model LogoModel
@using Nop.Core.Infrastructure
@using Nop.Web.Framework.Themes
@using Nop.Web.Models.Common;
@{


    var themeName = EngineContext.Current.Resolve<IThemeContext>().WorkingThemeName;
}
<div class="col-sm-4 col-xs-9  header__logo">
    <a href="@Url.RouteUrl("HomePage")" class="header__logo__image_big hidden-xs">
        <img alt="@Model.StoreName" class="img-responsive" src="@Model.LogoPath">
    </a>
    <a href="@Url.RouteUrl("HomePage")" class="header__logo__image visible-xs" style="margin-top: 10px;margin-left: 30px">
        <img alt="@Model.StoreName" src="@Model.LogoPath" class="img-responsive">
    </a>
    <a href="@Url.RouteUrl("HomePage")" class="header__logo__image_mini visible-xs" id="logo">
        <img alt="@Model.StoreName" src="@string.Format("/Themes/{0}/Content/images/logomini.png", themeName)" class="img-responsive" style="margin-top: 10px;">
    </a>
</div>