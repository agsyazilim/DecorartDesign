@model IList<ManufacturerBriefInfoModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{<span>
        @if (Model.Count == 1)
        {
            <text>@T("Products.Manufacturer"):</text>
        }
        else
        {
            <text>@T("Products.Manufacturer"):</text>
        }
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })">@item.Name</a>
            if (i != Model.Count - 1)
            {
                <span>,</span>
            }
        }
</span>
}