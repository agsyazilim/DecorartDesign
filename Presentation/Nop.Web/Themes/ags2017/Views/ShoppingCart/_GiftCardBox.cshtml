@model ShoppingCartModel.GiftCardBoxModel
@using Nop.Web.Models.ShoppingCart;
@if (Model.Display)
{
    <div class="form-group">
        <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
            <label class="label-head capitalize text-label prl-15" for="giftcardcouponcode">@T("ShoppingCart.GiftCardCouponCode")</label>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <input name="giftcardcouponcode" id="giftcardcouponcode" type="text" class="form-control text-input" placeholder="@T("ShoppingCart.GiftCardCouponCode.Tooltip")"/>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <input type="submit" name="applygiftcardcouponcode" id="applygiftcardcouponcode"
                   value="@T("ShoppingCart.GiftCardCouponCode.Button")" class="btn btn-default coupon-button"/>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
            @if (!String.IsNullOrEmpty(Model.Message))
            {
                <div class="@(Model.IsApplied ? "message-success" : "message-failure")">
                    @Model.Message
                </div>
            }
        </div>
    </div>

}
<script type="text/javascript">
    $(document).ready(function () {
        $('#giftcardcouponcode').keydown(function (event) {
            if (event.keyCode == 13) {
                $('#applygiftcardcouponcode').click();
                return false;
            }
        });
    });
</script>