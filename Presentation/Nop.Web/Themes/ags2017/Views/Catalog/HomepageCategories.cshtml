@model IList<CategoryModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-11  zoom__manset">
                @if (Model.Count > 2)
                {
                    foreach (var item in Model.Take(3))
                    {
                        <div class="zoom-container col-xs-12 col-sm-4">
                            <div class="zoom">
                                <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                <img title="@item.PictureModel.Title" src="@item.PictureModel.ImageUrl" class="img-responsive" alt="@item.PictureModel.AlternateText">
                                </a>
                            </div>
                        </div>
                    }
                }
                else if (Model.Count == 2)
                {
                    foreach (var item in Model)
                    {
                        <div class="zoom-container col-xs-12 col-sm-6">
                            <div class="zoom">
                                <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                    <img title="@item.PictureModel.Title" src="@item.PictureModel.ImageUrl" class="img-responsive" alt="@item.PictureModel.AlternateText">
                                </a>
                            </div>
                        </div>
                    }
                }
                else if (Model.Count == 1)
                {
                    <div class="zoom-container col-xs-12 col-sm-12">
                        <div class="zoom">
                            <a href="@Url.RouteUrl("Category", new { SeName = Model.FirstOrDefault().SeName })" title="@Model.FirstOrDefault().PictureModel.Title">
                                <img title="@Model.FirstOrDefault().PictureModel.Title" src="@Model.FirstOrDefault().PictureModel.ImageUrl" class="img-responsive" alt="@Model.FirstOrDefault().PictureModel.AlternateText">
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
