@model ManufacturerNavigationModel
@using Nop.Web.Models.Catalog;
@if (Model.Manufacturers.Count > 0)
{
    <div>
        <div class="yan-kategori__baslik">
            @T("Manufacturers")
        </div>
        <ul class="yan-kategori__list">
            @foreach(var item in Model.Manufacturers)
            {
                <li class="@(item.IsActive ? "active" : "") noCat"><a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })">@item.Name</a></li>
            }
        </ul>
        @if (Model.TotalManufacturers > Model.Manufacturers.Count)
        {
            <div class="yan-kategori__footer">
                <a href="@Url.RouteUrl("ManufacturerList")">@T("Manufacturers.ViewAll")</a>
            </div>
        }
    </div>
