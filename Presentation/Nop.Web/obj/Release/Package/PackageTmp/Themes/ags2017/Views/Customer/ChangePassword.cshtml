@model ChangePasswordModel
@using Nop.Web.Models.Customer;
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Account").Text);
    //page class
    Html.AppendPageCssClassParts("html-account-page");
    Html.AppendPageCssClassParts("html-change-password-page");
}

@section left
{
    @Html.Action("CustomerNavigation", "Customer", new { selectedTabId = CustomerNavigationEnum.ChangePassword })
}
<div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 account-area">
    <h3 class="section-main-title font-uppercase-title">
        @T("Account.MyAccount") - @T("Account.ChangePassword")
    </h3>
    <div class="col-lg-8 col-md-9 col-sm-9 col-xs-12 prl-0">
        <div class="account-form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                if (!String.IsNullOrEmpty(Model.Result))
                {
                    <div class="result">
                        @Model.Result
                    </div>
                }
                    
                var validationSummary = Html.ValidationSummary(true);
                    
                if (!MvcHtmlString.IsNullOrEmpty(validationSummary))
                {
                    <div class="message-error">@validationSummary</div>
                }

                <div class="clearfix">
                </div>
                <div class="form-group clearfix">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12  prl-0">
                        <label class="label-head text-label" for="OldPassword">Mevcut Şifre</label>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                        @Html.PasswordFor(model => model.OldPassword, new {@class = "form-control text-input"})
                        @Html.ValidationMessageFor(model => model.OldPassword)
                    </div>
                </div>
                <div class="form-group clearfix">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12  prl-0">
                        <label class="label-head  text-label" for="NewPassword">Yeni Şifre</label>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                        @Html.PasswordFor(model => model.NewPassword, new {@class = "form-control text-input"})
                        @Html.ValidationMessageFor(model => model.NewPassword)
                    </div>
                </div>
                <div class="form-group clearfix">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12  prl-0">
                        <label class="label-head text-label" for="ConfirmNewPassword">Yeni Şifre Tekrar</label>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                        @Html.PasswordFor(model => model.ConfirmNewPassword, new {@class = "form-control text-input"})
                        @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
                    </div>

                </div>
                <div class="clearfix">
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="button-line-div">
                        <input type="submit" class="btn btn-default pull-right save-button" value="@T("Account.ChangePassword.Button")"/>

                    </div>
                </div>
            }
        </div>
    </div>
</div>